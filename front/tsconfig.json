{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@event-details/*": [
        "src/app/components/events/event-detail/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}